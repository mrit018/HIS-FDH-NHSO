# ==============================================
# Database Configuration
# ==============================================

# ชนิดของฐานข้อมูล (เลือกได้ระหว่าง mysql หรือ postgres)
DB_TYPE=postgres

# ==============================================
# MySQL Configuration
# ==============================================

# โฮสต์ของ MySQL
MYSQL_HOST=mysql-production-server

# พอร์ตของ MySQL
MYSQL_PORT=3306

# ชื่อผู้ใช้ MySQL
MYSQL_USER=nhso_user

# รหัสผ่าน MySQL - ควรใช้รหัสผ่านที่แข็งแรง
MYSQL_PASSWORD=strong_password_here

# ชื่อฐานข้อมูล MySQL
MYSQL_DATABASE=nhso_claim_prod

# ==============================================
# PostgreSQL Configuration
# ==============================================

# โฮสต์ของ PostgreSQL
POSTGRES_HOST=192.168.5.2

# พอร์ตของ PostgreSQL
POSTGRES_PORT=5432

# ชื่อผู้ใช้ PostgreSQL
POSTGRES_USER=lphhos 

# รหัสผ่าน PostgreSQL - ควรใช้รหัสผ่านที่แข็งแรง
POSTGRES_PASSWORD=@13819*L#

# ชื่อฐานข้อมูล PostgreSQL
POSTGRES_DATABASE=Lpphos

